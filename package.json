{
    "name": "common-stuff",
    "version": "1.5.2",
    "description": "Collection of common helpers and utils for both JavaScript and NodeJS with TypeScript support",
    "keywords": [
        "common stuff",
        "utility",
        "javascript",
        "typescript",
        "functional",
        "library",
        "list",
        "object",
        "string",
        "array",
        "es6",
        "helper",
        "merge",
        "sort",
        "lodash"
    ],
    "main": "lib/index.js",
    "module": "esnext/index.js",
    "scripts": {
        "test": "jest spec",
        "build": "npm run build-node && npm run build-esnext",
        "build-node": "tsc",
        "build-esnext": "tsc --module esnext --outDir esnext",
        "docs:build": "typedoc --out docs --theme minimal src/index.ts",
        "docs:dev": "typedoc --out docs --theme minimal src/index.ts --watch",
        "prettify": "prettier --write \"{src,spec}/**/*.ts\"",
        "auto-release": "semantic-release"
    },
    "files": [
        "lib/**/*",
        "esnext/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KiraLT/common-stuff.git"
    },
    "author": "KiraLT",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/KiraLT/common-stuff/issues"
    },
    "homepage": "https://github.com/KiraLT/common-stuff#readme",
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/git": "^9.0.0",
        "@types/jest": "^27.0.1",
        "jest": "^27.1.0",
        "prettier": "^2.3.2",
        "semantic-release": "^17.4.7",
        "ts-jest": "^27.0.5",
        "typedoc": "^0.22.6",
        "typescript": "4.4.2"
    },
    "jest": {
        "preset": "ts-jest"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true
    },
    "release": {
        "branches": [
            "+([0-9])?(.{+([0-9]),x}).x",
            "main",
            "next",
            "next-major",
            {
                "name": "beta",
                "prerelease": true
            },
            {
                "name": "alpha",
                "prerelease": true
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/git",
            "@semantic-release/github"
        ]
    }
}
